Задание 1

CREATE TABLE city
(
    city_id   BIGSERIAL NOT NULL PRIMARY KEY,
    city_name VARCHAR(50) NOT NULL
);

SELECT * FROM city;

ALTER TABLE employee ADD COLUMN city_id BIGSERIAL NOT NULL;

ALTER TABLE city ADD CONSTRAINT fk_city_employee FOREIGN KEY(city_id) REFERENCES employee (city_id);

INSERT INTO city(city_id, city_name)
VALUES (1, 'Tiumen'),
       (2, 'Novosibirsk'),
       (3, 'Arzamas'),
       (4, 'Berdsk'),
       (5, 'Arzamas');

SELECT * FROM city;

Задание 2

SELECT first_name, last_name, city_name
FROM  employee LEFT JOIN city
                         ON employee.city_id = city.city_id;

SELECT city_name, first_name, last_name
FROM employee RIGHT JOIN city
                         ON employee.city_id = city.city_id;

SELECT first_name, city_name
FROM employee FULL JOIN city
                        ON employee.city_id = city.city_id;

SELECT first_name, city_name
FROM  employee
          CROSS JOIN city
GROUP BY first_name,city_name;